section.single-comments 
    h3.single-comments__title Комментарии
    .single-comments__content 
        form(action="").single-comments__form
            .single-comments__user 
                img.single-comments__avatar(src="/assets/images/single-item/user.png", alt="user-avatar") 
                strong.single-comments__fullname Игорь Зубарев
            textarea(name="user-comment" placeholder="Оставьте комментарий").single-comments__textarea
            button.single-comments__btn.darkBlueHover Отправить
